* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

body {
  background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
  color: white;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

section {
  text-align: center;
}

h1 {
  font-size: 3rem;
  letter-spacing: 2px;
}

h2 {
  margin-top: 15px;
  font-size: 1.5rem;
  color: #00ffcc;
}
